generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                String   @id @default(uuid())
  email             String   @unique
  
  username          String
  avatar            String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  videos            video[]
}

model video {
  id                 String @id @default(uuid())
  author             String
  title              String
  description        String
  likes              Int
  views              Int
  s3VideoKey         String
  thumbnailLocalPath String
  youtubeUrl         String
  price              Int
  currency           String
  users              user[]

  @@map("videos")
}
