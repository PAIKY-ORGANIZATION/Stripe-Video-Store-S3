model video {
  id             String @id @default(uuid())
  author         String
  title          String
  description    String
  likes          Int
  views          Int
  s3VideoKey     String
  thumbnailLocalPath String
  youtubeUrl     String
  price          Int
  currency       String

  @@map("videos")
}
